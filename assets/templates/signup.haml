- extends "layout/base.html"
- load static

- block body
  .page-modal
    %h2 Create Your Account

    %form.form(method="POST")
      - csrf_token

      - for field in signup_form
        {{field}}

        - if field.errors
          .field-error {{field.errors|first}}

      %input.btn.btn-block.btn-white(type="submit" value="Create Account")